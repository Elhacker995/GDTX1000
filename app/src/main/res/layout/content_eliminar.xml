<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cl.tgdtx1000.macrosolutions.gdtx_app.Eliminar"
    tools:showIn="@layout/activity_eliminar">

    <ListView
        android:id="@+id/lvParticulas"
        android:layout_width="338dp"
        android:layout_height="386dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/lblEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione un registro para eliminarlo"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lblAdv"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/lblAdv"
        android:layout_width="342dp"
        android:layout_height="32dp"
        android:text="Advertencia: El registro sera eliminado tan pronto se selecione."
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/lvParticulas"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
